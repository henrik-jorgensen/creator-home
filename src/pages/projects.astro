---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { Button } from '@/components/ui/button';
import { MessageSquare } from 'lucide-react';

// You can move this to a separate data file later
const projects = [
  {
    title: "greatcoffee.now",
    description: "A coffee discovery platform helping people find and enjoy great coffee wherever they are. Built with Next.js, Supabase, and Google Maps API.",
    url: "https://revid.ai",
    icon: "â˜•"
  },
  {
    title: "AI meme generator",
    description: "Experimental project that generates memes using AI. Built with Stable Diffusion and GPT-3.5 for caption generation.",
    url: "#",
    icon: "ðŸ˜„"
  },
  {
    title: "Product Hunt clone",
    description: "A weekend project that taught me about product discovery and community building. Failed spectacularly but learned valuable lessons about MVP validation.",
    url: "#",
    icon: "ðŸš€"
  }
];
---

<Layout title="Cool Stuff - creator-home">
  <main class="container mx-auto px-4 pt-6 sm:pt-16 pb-16 max-w-5xl">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="text-4xl font-bold mb-4 opacity-0 animate-fade-up" style="animation-delay: 100ms">Cool Stuff</h1>
      <p class="text-lg text-muted-foreground opacity-0 animate-fade-up" style="animation-delay: 200ms">
        A collection of things I've built and shipped. Some successful, some not so much - but each one has been a fun adventure and learning experience.
      </p>
    </section>

    <!-- Get in Touch -->
    <section class="mb-16">
      <div class="bg-muted/50 border rounded-lg p-8 opacity-0 animate-fade-up" style="animation-delay: 300ms">
        <div class="flex items-start gap-4">
          <span class="text-xl animate-bounce-once">ðŸ’¡</span>
          <div>
            <h2 class="text-xl sm:text-2xl font-bold mb-2">Have a project idea?</h2>
            <p class="text-muted-foreground mb-3">
              I'm always interested in hearing about new projects and potential collaborations.
            </p>
            <a 
              href="mailto:your@email.com" 
              class="link-with-icon"
            >
              Let's talk about it
              <MessageSquare className="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Active Projects -->
    <section class="mb-16">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 opacity-0 animate-fade-up" style="animation-delay: 400ms">Active Projects</h2>
      <div class="space-y-8">
        {projects.slice(0, 1).map((project, index) => (
          <div class="opacity-0 animate-fade-up" style={`animation-delay: ${500 + (index * 100)}ms`}>
            <ProjectCard {...project} />
          </div>
        ))}
      </div>
    </section>

    <!-- Past Projects -->
    <section class="mb-8 sm:mb-12">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 opacity-0 animate-fade-up" style="animation-delay: 600ms">Past Projects</h2>
      <div class="space-y-8">
        {projects.slice(1).map((project, index) => (
          <div class="opacity-0 animate-fade-up" style={`animation-delay: ${700 + (index * 100)}ms`}>
            <ProjectCard {...project} />
          </div>
        ))}
      </div>
    </section>

    <!-- Open Source -->
    <section class="mb-16">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 opacity-0 animate-fade-up" style="animation-delay: 800ms">Open Source</h2>
      <div class="space-y-8">
        <div class="opacity-0 animate-fade-up" style="animation-delay: 900ms">
          <ProjectCard 
            title="creator-home"
            description="The source code for this website. Built with Astro, Shadcn UI, and TailwindCSS."
            url="https://github.com/yourusername/creator-home"
            icon="âš¡"
          />
        </div>
      </div>
    </section>
  </main>
</Layout> 

<style>
  /* Add fade-up animation */
  .animate-fade-up {
    animation: fadeUp 0.5s ease-out forwards;
  }

  @keyframes fadeUp {
    from { 
      opacity: 0; 
      transform: translateY(20px);
    }
    to { 
      opacity: 1; 
      transform: translateY(0);
    }
  }

  /* Add bounce animation for emojis */
  .animate-bounce-once {
    animation: bounce 0.6s cubic-bezier(0.36, 0, 0.66, -0.56) 500ms;
    animation-iteration-count: 1;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-25%); }
  }

  /* Project card hover animation */
  .project-card {
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-2px);
  }

  .project-card:hover .text-xl {
    animation: bounce 0.6s cubic-bezier(0.36, 0, 0.66, -0.56);
  }
</style> 