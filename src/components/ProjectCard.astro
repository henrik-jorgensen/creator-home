---
import { ExternalLink } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  url: string;
  icon: string;
  titleClass?: string;
}

const { title, description, url, icon, titleClass = "subheading" } = Astro.props;
---

<div class="flex items-start gap-4 project-card">
  <span class="text-xl animate-bounce-once">{icon}</span>
  <div>
    <h3 class={`font-semibold mb-2 ${titleClass}`}>{title}</h3>
    <p class="text-muted-foreground mb-2">{description}</p>
    {url && (
      <a 
        href={url} 
        class="link-with-icon"
        target="_blank"
      >
        View Project
        <ExternalLink className="w-4 h-4" />
      </a>
    )}
  </div>
</div> 