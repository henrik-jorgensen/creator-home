---
import { Twitter, Github, Linkedin, Instagram } from 'lucide-react';
import { Button } from '@/components/ui/button';
---

<footer class="py-8 border-t">
  <div class="container mx-auto px-4 max-w-5xl">
    <div class="flex flex-col items-center gap-6">
      <div class="flex justify-center gap-4">
        <Button variant="ghost" size="icon" asChild>
          <a href="https://x.com/username" aria-label="Twitter">
            <Twitter className="w-5 h-5" />
          </a>
        </Button>
        <Button variant="ghost" size="icon" asChild>
          <a href="https://github.com/username" aria-label="GitHub">
            <Github className="w-5 h-5" />
          </a>
        </Button>
        <Button variant="ghost" size="icon" asChild>
          <a href="https://linkedin.com/in/username" aria-label="LinkedIn">
            <Linkedin className="w-5 h-5" />
          </a>
        </Button>
        <Button variant="ghost" size="icon" asChild>
          <a href="https://instagram.com/username" aria-label="Instagram">
            <Instagram className="w-5 h-5" />
          </a>
        </Button>
        <Button variant="ghost" size="icon" asChild>
          <a href="https://threads.net/@username" aria-label="Threads">
            <svg 
              viewBox="0 0 24 24" 
              class="w-5 h-5" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            >
              <path d="M17.75 2H6.25C3.9 2 2 3.9 2 6.25v11.5C2 20.1 3.9 22 6.25 22h11.5c2.35 0 4.25-1.9 4.25-4.25V6.25C22 3.9 20.1 2 17.75 2Z" />
              <path d="M12 7v10" />
              <path d="M8 9v6a3 3 0 0 0 6 0V8.5A4.5 4.5 0 0 1 18.5 13" />
            </svg>
          </a>
        </Button>
      </div>
      <p class="text-sm text-muted-foreground">
        Â© {new Date().getFullYear()} Henrik's Home. All rights reserved.
      </p>
    </div>
  </div>
</footer> 